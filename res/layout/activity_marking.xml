<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="#fff"
    	android:gravity="center"
	    >
	    <LinearLayout 
	        android:id="@+id/radio_mark_box"
	    android:layout_width="200dp"
    	android:layout_height="30dp"
    	android:background="@drawable/view_rect_border"
	    >
		    <TextView 
		        android:id="@+id/radio_mark_button"
		        android:layout_width="0dp"
	    		android:layout_height="28dp"
	    		android:layout_weight="1"
	    		android:text="正评列表"
	    		android:gravity="center"
	    		android:onClick="onClick"
	    		android:background="#ff9647"
	    		android:textColor="#fff"
		        />
		    <TextView 
		        android:id="@+id/radio_mark_back_button"
		        android:layout_width="0dp"
	    		android:layout_height="28dp"
	    		android:layout_weight="1"
	    		android:text="回评列表"
	    		android:padding="1dp"
	    		android:gravity="center"
	    		android:onClick="onClick"
		        />
	    </LinearLayout>
	    
	    
	</LinearLayout>
	<LinearLayout 
		    android:layout_width="match_parent"
	    	android:layout_height="200dp"
	    >
	    <ListView
	        android:background="#ffffffff"
	        android:id="@+id/already_mark_list_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/Button"
   		/>
	</LinearLayout>
</LinearLayout>